<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="MAUIAPP.MainPage">

    <ScrollView>
        <VerticalStackLayout
            x:Name="layout"
            Spacing="25"
            Padding="30,0"
            VerticalOptions="Center">

            <Button x:Name="Boton1" Text="Boton1" FontAutoScalingEnabled="true" BackgroundColor="Blue" HeightRequest="70" WidthRequest="200" FontFamily="verdana" FontAttributes="Bold" FontSize="16" BorderColor="Yellow" Margin="30"/>
            <Button 
                x:Name="Boton2" 
                Text="Boton2"
                FontAutoScalingEnabled="true" 
                BackgroundColor="Blue" 
                HeightRequest="70" 
                WidthRequest="200" 
                FontFamily="verdana" 
                FontAttributes="Bold" 
                FontSize="16" 
                BorderColor="Yellow" 
                Margin="30"
                Clicked="Boton2_Clicked"/>
        </VerticalStackLayout>
    </ScrollView>
    
</ContentPage>
